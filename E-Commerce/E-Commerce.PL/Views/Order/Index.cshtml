@model IEnumerable<OrderViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="card-box mb-30">
    <a class="btn btn-primary" asp-action="Create">Add New Order</a>
    <div id="value"></div>
    <h2 class="h4 pd-20">Best Selling Products</h2>
    <table class="data-table table nowrap">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Customer Name</th>
                <th>Customer Phone</th>
                <th>Order Date</th>
                <th>Products</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td><h5 class="font-16">@order.Id</h5></td>
                    <td>@order.Customer.Name</td>
                    <td>@order.Customer.Phone</td>
                    <td>@order.OrderDate</td>
                    <td>
                        @foreach (var p in order.ProductOrders)
                        {
                            <span>/ @p.Product.Name</span>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" asp-controller="Order" asp-action="Details" asp-route-id="@order.Id"><i class="dw dw-eye"></i> Details</a>
                                <a class="dropdown-item" asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>