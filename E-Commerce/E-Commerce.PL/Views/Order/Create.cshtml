
@model OrderViewModel
@inject IGenericRepository<Customer> CustomerRepo
@inject IGenericRepository<Product> ProductRepo
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-action="Create">
    <select asp-for="CustomerId">
        <option value="default" selected>-Choose Customer-</option>
        @foreach (var c in await CustomerRepo.GetAll())
        {
            <option value="@c.Id">@c.Name</option>
        }
    </select>
    <select asp-for="ProductId" class="form-control custom-select2 select2-hidden-accessible"
            multiple="" style="width:100%;" data-select2-id="4" tabindex="-1"
            aria-hidden="true">
        <option value="default" >-Choose Product-</option>
        @foreach(var p in await ProductRepo.GetAll())
        {
            <option value="@p.Id">@p.Name</option>
        }
    </select>
    <button type="submit" class="btn btn-success">Add Product</button>
</form>